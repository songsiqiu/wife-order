/**app.wxss**/

/* ========== 全局变量 ========== */
page {
  --color-primary: #ff8c42;
  --color-primary-dark: #ff6b35;
  --color-danger: #ff6b6b;
  --color-success: #10b981;
  --color-text: #1a1a1a;
  --color-text-secondary: #666;
  --color-text-muted: #999;
  --color-bg: #fafafa;
  --color-bg-secondary: #f0f0f0;
  --gradient-primary: linear-gradient(
    135deg,
    var(--color-primary) 0%,
    var(--color-primary-dark) 100%
  );
  --gradient-dark: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
  --gradient-page: linear-gradient(180deg, #fafafa 0%, #f0f0f0 100%);
  --shadow-sm: 0 2rpx 10rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  --shadow-lg: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  --shadow-primary: 0 6rpx 20rpx rgba(255, 107, 53, 0.3);
}

/* ========== 公共页面样式 ========== */
.page-background {
  height: 100vh;
  background: var(--gradient-page);
}

/* ========== 公共动画 ========== */
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes bounce {
  0%,
  100% {
    transform: scale(1);
  }
  30% {
    transform: scale(1.3);
  }
  60% {
    transform: scale(0.9);
  }
}

/* ========== 加载动画 ========== */
.loading-spinner {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #ffcba4;
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* ========== 容器样式 ========== */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
